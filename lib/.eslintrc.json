{
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "semi": [2, "always"],
        "indent": ["error", 4],
        "no-empty-function": 2,
        "linebreak-style": ["error", "windows"],
        "space-infix-ops":["error", {"int32Hint": true}]
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "commonjs": true
    }
}
